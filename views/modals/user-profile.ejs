<form id="form_update_user_profile">
    <input name="id" type="text" value="<%= user._id %>" hidden>
    <h4>Información del usuario</h4>
    <p>
        <label>Nombre de usuario</label>
        <input name = "username" type="text" class="form-control" value="<%= user.username %>" disabled>
    </p>
    <p>
        <label>Nombre(s)</label>
        <input name="fullname" type="text" class="form-control" value="<%= user.fullname %>">
    </p>

    <p><label>E-mail</label>
        <input name="email" type="email" class="form-control" value="<%= user.email %>" placeholder="E-mail">
    </p>
    <p>
        <label>Dirección</label>
        <input class="form-control" type="text" value="<%= user.address%>" name="address">
    </p>
    <button type="submit" class="btn btn-default">Actualizar</button>
</form>
<hr>
<h4>Actualizar contraseña</h4>

<form id="form_update_user_password">
    <p>
        <label>Contraseña actual</label>
        <input type="password" class="form-control" required>
    </p>
    <p>
        <label>Nueva contraseña</label>
        <input type="password" class="form-control" required>
    </p>
    <p>
        <label>Confirmar contraseña</label>
        <input type="password" class="form-control" required>
    </p>
    <button type="submit" class="btn btn-default">Actualizar</button>
</form>